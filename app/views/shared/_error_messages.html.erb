<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show" role="alert" id="notice-alert">
    <strong><%= flash[:notice] %></strong>
    <%= button_tag("", type: "button", class: "btn-close", "data-bs-dismiss" => "alert", "aria-label" => "Close") %>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" id="alert-alert">
    <strong><%= flash[:alert] %></strong>
    <%= button_tag("", type: "button", class: "btn-close", "data-bs-dismiss" => "alert", "aria-label" => "Close") %>
  </div>
<% end %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Automatically close flash messages after 5 seconds
    setTimeout(function() {
      document.querySelector('#notice-alert')?.remove();
      document.querySelector('#alert-alert')?.remove();
    }, 5000);
  });
</script>
